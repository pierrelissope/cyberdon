** File description:
** event handling for fighting
*/

#include "entity.h"

int handle_fight_event(game_t *game, sfEvent *event)
{
    while (sfRenderWindow_pollEvent(game->window, event)) {
        move_entity(&(game->player), event, &(game->world));
        if (event->type == sfEvtClosed)
            return sfEvtClosed;
    }
    return sfEvtCount;
}
